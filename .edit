:
clear
tmpfile=/tmp/edit.tmp

test -d content || {
    echo "Error: no 'content' directory found"
    exit 1
}

count=0

find content/ -type f -print |
while read fn
do
    count=$((count + 1))
    echo "$count  $fn"

done > $tmpfile

cat $tmpfile

num=$1

echo
echo -n "Edit #: "

if test "$num" = ""
then
    read num
else
    echo
fi

test "$num" = "" || {
    fn=$(awk "/^${num}/ {print \$2}" $tmpfile)
    rm -f $tmpfile
    exec vim $fn

    # exec vim $(awk "/^${num}/ {print \$2}" $tmpfile)
}

rm -f $tmpfile
exit 0
